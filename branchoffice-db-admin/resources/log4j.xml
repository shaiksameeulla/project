<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration>
  <appender name="appender" class="org.apache.log4j.RollingFileAppender">
    <!-- <param name="File" value="C:\DTDCLOGS\ctbs-web.log"/>  -->   
    <param name="File" value="${catalina.home}/logs/bodb-admin.log"/>

    <param name="MaxFileSize" value="1024KB"/>
    <param name="MaxBackupIndex" value="15"/>
    <param name="Append" value="false"/>
    <layout class="org.apache.log4j.PatternLayout">
    <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>
  </appender>
  
    <appender name="c3p0fileappender" class="org.apache.log4j.RollingFileAppender">
    <!-- <param name="File" value="C:\DTDCLOGS\ctbs-web.log"/>  -->   
    <param name="File" value="${catalina.home}/logs/bodb-admin-c3p0.log"/>

    <param name="MaxFileSize" value="1024KB"/>
    <param name="MaxBackupIndex" value="5"/>
    <param name="Append" value="false"/>
    <layout class="org.apache.log4j.PatternLayout">
    <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>
  </appender>

  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>

  </appender>  
    <appender name="c3p0App" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>
  </appender>
  
	<appender name="dataExtractor" class="org.apache.log4j.RollingFileAppender">   
    <!-- <param name="File" value="C:\DTDCLOGS\ctbs-web.log"/>  -->   
    <param name="File" value="${catalina.home}/logs/bodb-admin-dataExtractor.log"/>

    <param name="MaxFileSize" value="1024KB"/>
    <param name="MaxBackupIndex" value="15"/>
    <param name="Append" value="false"/>
    <layout class="org.apache.log4j.PatternLayout">
    <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>
  </appender> 
 <appender name="DataExtractorClient" class="org.apache.log4j.RollingFileAppender">   
    <!-- <param name="File" value="C:\DTDCLOGS\ctbs-web.log"/>  -->   
    <param name="File" value="${catalina.home}/logs/bodb-admin-DataExtractorClient.log"/>

    <param name="MaxFileSize" value="1024KB"/>
    <param name="MaxBackupIndex" value="5"/>
    <param name="Append" value="false"/>
    <layout class="org.apache.log4j.PatternLayout">
    <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>
  </appender> 
  
  <appender name="comDtdcBodbadmin" class="org.apache.log4j.RollingFileAppender">   
    <!-- <param name="File" value="C:\DTDCLOGS\ctbs-web.log"/>  -->   
    <param name="File" value="${catalina.home}/logs/bodb-admin-comDtdcBodbadminPack.log"/>

    <param name="MaxFileSize" value="1024KB"/>
    <param name="MaxBackupIndex" value="15"/>
    <param name="Append" value="false"/>
    <layout class="org.apache.log4j.PatternLayout">
    <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>
  </appender> 
  <category name="com.mchange" additivity="false">
    <priority value="ERROR"/>
    <appender-ref ref="c3p0fileappender"/>
  </category>
   <category name="com.dtdc.bodbadmin.dataextractor" additivity="false">
    <priority value="debug"/>
    <appender-ref ref="dataExtractor"/>
    
  </category>
   

  <category name="ccom.dtdc.bodbadmin" additivity="false">
    <priority value="debug"/>
    <appender-ref ref="comDtdcBodbadmin"/>
    
  </category>
  
  <category name="com.dtdc.bodbadmin.integration" additivity="false">
    <priority value="debug"/>
    <appender-ref ref="DataExtractorClient"/>
    
  </category>

  <root>
    <priority value ="debug"/>    
    <appender-ref ref="appender"/>
   <appender-ref ref="console"/>
  </root>
</log4j:configuration>
