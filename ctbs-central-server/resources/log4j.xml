<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration>
  <appender name="appender" class="org.apache.log4j.RollingFileAppender">
    <!-- <param name="File" value="C:\DTDCLOGS\ctbs-web.log"/>  -->   
    <param name="File" value="${catalina.home}/logs/ctbs-central-server.log"/>

    <param name="MaxFileSize" value="1024KB"/>
    <param name="MaxBackupIndex" value="15"/>
    <param name="Append" value="false"/>
    <layout class="org.apache.log4j.PatternLayout">
    <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>
  </appender>
  
    <appender name="c3p0fileappender" class="org.apache.log4j.RollingFileAppender">
    <!-- <param name="File" value="C:\DTDCLOGS\ctbs-web.log"/>  -->   
    <param name="File" value="${catalina.home}/logs/ctbs-central-server-c3p0.log"/>

    <param name="MaxFileSize" value="1024KB"/>
    <param name="MaxBackupIndex" value="15"/>
    <param name="Append" value="false"/>
    <layout class="org.apache.log4j.PatternLayout">
    <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>
  </appender>  

  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>

  </appender>  
    <appender name="c3p0App" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>
  </appender>
 
  
 <appender name="CentralDataExtractorServiceImpl" class="org.apache.log4j.RollingFileAppender">
    <!-- <param name="File" value="C:\DTDCLOGS\ctbs-web.log"/>  -->   
    <param name="File" value="${catalina.home}/logs/ctbs-central-server-CentralDataExtractorServiceImpl.log"/>

    <param name="MaxFileSize" value="1024KB"/>
    <param name="MaxBackupIndex" value="15"/>
    <param name="Append" value="false"/>
    <layout class="org.apache.log4j.PatternLayout">
    <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>
  </appender>
  
  <appender name="BODBAdminRequestProcessorServiceImpl" class="org.apache.log4j.RollingFileAppender">
    <!-- <param name="File" value="C:\DTDCLOGS\ctbs-web.log"/>  -->   
    <param name="File" value="${catalina.home}/logs/ctbs-central-server-BODBAdminRequestProcessorServiceImpl.log"/>

    <param name="MaxFileSize" value="1024KB"/>
    <param name="MaxBackupIndex" value="15"/>
    <param name="Append" value="false"/>
    <layout class="org.apache.log4j.PatternLayout">
    <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>
  </appender>   
  <appender name="CentralDataExtractorServlet" class="org.apache.log4j.RollingFileAppender">
    <!-- <param name="File" value="C:\DTDCLOGS\ctbs-web.log"/>  -->   
    <param name="File" value="${catalina.home}/logs/ctbs-central-server-CentralDataExtractorServlet.log"/>

    <param name="MaxFileSize" value="1024KB"/>
    <param name="MaxBackupIndex" value="15"/>
    <param name="Append" value="false"/>
    <layout class="org.apache.log4j.PatternLayout">
    <param name="ConversionPattern" value="%d [%t] %p - %m%n"/>
    </layout>
  </appender>

  <category name="com.mchange" additivity="false">
    <priority value="ERROR"/>
    <appender-ref ref="c3p0fileappender"/>
    <appender-ref ref="c3p0App"/>
  </category>
  
  <category name="com.dtdc.bodbadmin.service.BODBAdminRequestProcessorServiceImpl" additivity="false">
    <priority value="debug"/>
    <appender-ref ref="BODBAdminRequestProcessorServiceImpl"/>
  </category>
  
  <category name="com.capgemini.lbs.centralserver.servlets" additivity="false">
    <priority value="debug"/>
    <appender-ref ref="CentralDataExtractorServlet"/>
  </category>
  
  <category name="com.dtdc.bodbadmin.service.CentralDataExtractorServiceImpl" additivity="false">
    <priority value="debug"/>
    <appender-ref ref="CentralDataExtractorServiceImpl"/>
  </category>

  <root>
    <priority value ="debug"/>    
    <appender-ref ref="console"/>
    <appender-ref ref="appender"/>
  </root>
</log4j:configuration>
