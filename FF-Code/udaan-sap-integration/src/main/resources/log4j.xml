<?xml version="1.0" encoding="UTF-8"?>
	
<!-- <!DOCTYPE log4j:configuration SYSTEM "log4j.dtd"> -->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
      	<appender name="appender" class="org.apache.log4j.DailyRollingFileAppender">
            <param name="File" value="${catalina.base}/logs/sap-integration.log" />
            <param name="Append" value="false" />
            <!-- <param name="MaxFileSize" value="20MB" />
			<param name="MaxBackupIndex" value="2000" /> -->
			<param name="DatePattern" value="'.'yyyy-MM-dd-HH" />
            <layout class="org.apache.log4j.PatternLayout">
                   <param name="ConversionPattern" value="%d [%t] %p - %m%n" />
            </layout>
      	</appender>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>
	<appender name="c3p0App" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>

	<category name="com.mchange" additivity="false">
		<priority value="ERROR" />
		<appender-ref ref="c3p0fileappender" />
	</category>

	<root>
		<!-- This will send all the logs of server startup to the console & to appender -->
		<priority value="warn" /> 
		<!-- <appender-ref ref="console"/> -->
		<appender-ref ref="appender"/>
	</root>
	
</log4j:configuration>
