<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ff.domain.stockmanagement.masters.StockEmployeeMappingDO" table="ff_d_employee_stock_mapping">
		<id name="stockId" type="java.lang.Integer">
			<column name="STOCK_ID" />
			<generator class="native" />
		</id>
		<property name="quantity" column="STOCK_QUANTITY" />
		<property name="transactionStatus" column="CUR_STATUS" />

		<!-- <many-to-one name="itemDO"
			class="com.ff.domain.stockmanagement.masters.ItemDO" lazy="false">
			<column name="ITEM_ID" />
		</many-to-one>
		<many-to-one name="employeeDO"
			class="com.ff.domain.organization.EmployeeDO" lazy="false">
			<column name="EMPLOYEE_ID" />
		</many-to-one> -->
		
		<property name="itemId" column="ITEM_ID" />
		<property name="employeeId" column="EMPLOYEE_ID" />
		<property name="dtToBranch" column="DT_TO_BRANCH" />
	</class>
	
	<query name="stockDecreaseForEmployee">
		<![CDATA[
 			update com.ff.domain.stockmanagement.masters.StockEmployeeMappingDO empStock
 			set empStock.quantity = empStock.quantity- :quantity
 			where empStock.itemId= :itemId
 			AND
 			empStock.employeeId=:partyTypeId
		]]>
	</query>
	
	<query name="stockIncreaseForEmployee">
		<![CDATA[
 			update com.ff.domain.stockmanagement.masters.StockEmployeeMappingDO empStock
 			set empStock.quantity = empStock.quantity + :quantity
 			where empStock.itemId= :itemId
 			AND
 			empStock.employeeId=:partyTypeId
		]]>
	</query>
	
</hibernate-mapping>