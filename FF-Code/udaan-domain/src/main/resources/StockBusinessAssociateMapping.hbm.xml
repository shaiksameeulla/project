<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ff.domain.stockmanagement.masters.StockBusinessAssociateMappingDO" table=" ff_d_ba_stock_mapping">
		<id name="stockId" type="java.lang.Integer">
			<column name="STOCK_ID" />
			<generator class="native" />
		</id>
		<property name="quantity" column="STOCK_QUANTITY" />
		<property name="transactionStatus" column="CUR_STATUS" />

		<!-- <many-to-one name="itemDO"
			class="com.ff.domain.stockmanagement.masters.ItemDO" lazy="false">
			<column name="ITEM_ID" />
		</many-to-one>
		<many-to-one name="businessAssociateDO"
			class="com.ff.domain.business.CustomerDO" lazy="false">
			<column name="BA_ID" />
		</many-to-one> -->
		
		<property name="itemId" column="ITEM_ID" />
		<property name="baId" column="BA_ID" />
		<property name="dtToBranch" column="DT_TO_BRANCH" />
		
	</class>
	
	<query name="stockDecreaseForBA">
		<![CDATA[
 			update com.ff.domain.stockmanagement.masters.StockBusinessAssociateMappingDO baStock
 			set baStock.quantity = baStock.quantity - :quantity
 			where baStock.itemId= :itemId
 			AND
 			baStock.baId=:partyTypeId
		]]>
	</query>
	
	<query name="stockIncreaseForBA">
		<![CDATA[
 			update com.ff.domain.stockmanagement.masters.StockBusinessAssociateMappingDO baStock
 			set baStock.quantity = baStock.quantity + :quantity
 			where baStock.itemId= :itemId
 			AND
 			baStock.baId=:partyTypeId
		]]>
	</query>
	
</hibernate-mapping>