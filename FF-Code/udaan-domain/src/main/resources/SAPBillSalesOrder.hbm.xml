<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ff.domain.billing.SAPBillSalesOrderDO" table="ff_f_sap_bill_sales_order">
		<id name="id" type="java.lang.Long" column="ID">
			<generator class="increment" />
		</id>
		<property name="summaryId" column="SUMMARY_ID"/>
        <property name="salesOrderNo" column="SALES_ORDER_NUMBER"/>
	 	<property name="billNo" column="BILL_NUMBER"/>
	 	<property name="billStatus" column="BILL_STATUS"/>
	 	<property name="sapInbound" column="DT_SAP_INBOUND"/>
	 	<property name="sapTimeStamp" column="SAP_TIMESTAMP"/>
	 	<property name="grandTotal" column="GRAND_TOTAL"/>
	 	<property name="billCreationDate" column="BILL_CREATION_DATE"/>
	 	<property name="createdBy" column="CREATED_BY" />
		<property name="updatedBy" column="UPDATE_BY" />
		<property name="createdDate" column="CREATED_DATE" />
		<property name="updatedDate" column="UPDATE_DATE" />
	</class>
	
<query name="getSAPBillSalesOrderDtls">
	<![CDATA[
		 FROM	com.ff.domain.billing.SAPBillSalesOrderDO billSalesOrder
		 WHERE	billSalesOrder.summaryId=:summaryId
	]]>
</query>

<query name="getSAPBillSalesOrderDtlsList">
	<![CDATA[
		 FROM	com.ff.domain.billing.SAPBillSalesOrderDO billSalesOrder
		 WHERE	billSalesOrder.summaryId IN (:summaryIds)
	]]>
</query>

<query name="getSAPBillSalesOrderDtlsByBill">
	<![CDATA[
		 FROM	com.ff.domain.billing.SAPBillSalesOrderDO billSalesOrderDO
		 WHERE	billSalesOrderDO.billNo=:billNo
	]]>
</query>

<query name="updateInvoiceStatus">
	<![CDATA[
		 UPDATE	com.ff.domain.billing.SAPBillSalesOrderDO billSalesOrderDO
		 SET 	billSalesOrderDO.billStatus=:billStatus
		 WHERE	billSalesOrderDO.billNo=:billNo
	]]>
</query>
	
</hibernate-mapping>