<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ff.domain.stockmanagement.operations.issue.SAPStockIssueDO" table="ff_f_sap_stock_issue">
		<id name="Id" type="java.lang.Long">
			<column name="ID" />
			<generator class="native" />
		</id>
		<property name="rowNumber" column="ROW_NUMBER" />
		<property name="issueDate" column="ISSUE_DATE" />
		<property name="requisitionNumber" column="REQUISITION_NUMBER" />
		<property name="itemCode" column="ITEM_CODE" />
		<property name="itemTypeCode" column="ITEM_TYPE_CODE" />
		<property name="description" column="DESCRIPTION"/>
		<property name="uom" column="UOM" />
		<property name="issuedQty" column="ISSUED_QUANTITY"/>
		<property name="issueNumber" column="ISSUE_NUMBER"/>
		<property name="issuedToofficeCode" column="ISSUED_TO_OFFICE_CODE" />
		<property name="issuedOfficeCode" column="ISSUE_OFFICE_CODE"/>
		<property name="custCode" column="CUSTOMER_CODE" />
		<property name="stockIssueItemDtlsId" column="STOCK_ISSUE_ITEM_DTLS_ID" />    
		<!--  common attributes  START-->
		<property name="sapStatus" column="DT_SAP_OUTBOUND" />
		<property name="sapTimestamp" column="SAP_TIMESTAMP" />
		<property name="exception" column="EXCEPTION" />
		<property name="createdBy" column="CREATED_BY" />
		<property name="updatedBy" column="UPDATE_BY" />
		<property name="createdDate" column="CREATED_DATE" />
		<property name="updatedDate" column="UPDATE_DATE" />
		<!--  common attributes  END -->
	</class>
	
<query name="getStockIssueDtlsFromSAPIssue">
	<![CDATA[
		 FROM	com.ff.domain.stockmanagement.operations.issue.SAPStockIssueDO sapStkIssueDO
		 WHERE	sapStkIssueDO.sapStatus=:sapStatus and ( sapStkIssueDO.exception IS NULL or LENGTH(sapStkIssueDO.exception ) < 1)
	]]>
</query>

<query name="updateStockIssueSAPFlag">
	<![CDATA[ 
		UPDATE	com.ff.domain.stockmanagement.operations.issue.SAPStockIssueDO sapStkIssueDO
		SET		sapStkIssueDO.sapStatus=:sapStatus,sapStkIssueDO.sapTimestamp=:sapTimestamp,sapStkIssueDO.exception=:exception
		WHERE 	sapStkIssueDO.Id=:Id
	]]>
</query>

<query name="getStockIssueDtlsFromStaging">
	<![CDATA[
		 FROM	com.ff.domain.stockmanagement.operations.issue.SAPStockIssueDO sapStkIssueDO
		 WHERE	sapStkIssueDO.issueNumber=:issueNumber
	]]>
</query>
	
</hibernate-mapping>