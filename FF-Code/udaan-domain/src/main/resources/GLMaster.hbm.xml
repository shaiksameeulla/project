	<![CDATA[
		SELECT gl.paymentModeDO.paymentId FROM com.ff.domain.mec.GLMasterDO gl 
		WHERE gl.glId=:glId
	]]>
</query> -->

<query name="getGLDetailsByGLId">
	<![CDATA[
		FROM com.ff.domain.mec.GLMasterDO gl WHERE gl.glId=:glId
	]]>
</query>

<query name="getAllBankGLDtls">
	<![CDATA[
		FROM com.ff.domain.mec.GLMasterDO gl
		WHERE gl.isBankGL=:isBankGL
	]]>
</query>

<query name="getAllBankGLDtlsByRegion">
	<![CDATA[
		FROM com.ff.domain.mec.GLMasterDO gl 
		WHERE gl.glId IN 
			(SELECT region.glMasterDO.glId FROM com.ff.domain.mec.GLRegionDO region 
			WHERE region.regionDO.regionId=:regionId)
		AND gl.isBankGL=:isBankGL
	]]>
</query>

<query name="getAllGLDesc">
	<![CDATA[
		SELECT DISTINCT(gl.glDesc) FROM com.ff.domain.mec.GLMasterDO gl
	]]>
</query>

</hibernate-mapping>