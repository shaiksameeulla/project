	<![CDATA[ select branch.pickupOrderDetail.pickupOrderHeader From com.ff.domain.pickup.ReversePickupOrderBranchMappingDO branch
		          where  branch.pickupOrderDetail.orderNumber IN (:ordernum) ]]>
	</query> -->
	
</hibernate-mapping>