<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ff.domain.masters.HolidayDO" table="ff_d_holiday">
		<id name="id" type="java.lang.Integer">
			<column name="HOLIDAY_ID" />
			<generator class="native" />
		</id>
		<property name="date" type="timestamp">
            <column name="HOLIDAY_DATE" length="19" />
        </property>
		<property name="holidayNameId" type="java.lang.Integer">
			<column name="HOLIDAY_NAME_ID" length="11" />
		</property>
		<property name="regionId" type="java.lang.Integer">
			<column name="REGION_ID" length="11" />
		</property>
		<property name="stateId" type="java.lang.Integer">
			<column name="STATE_ID" length="11" />
		</property>
		<property name="cityId" type="java.lang.Integer">
			<column name="CITY_ID" length="11" />
		</property>
		<property name="branchId" type="java.lang.Integer">
			<column name="BRANCH_ID" length="11" />
		</property>
		<property name="others" type="string">
			<column name="OTHER_DETAILS" length="50" />
		</property>
		<property name="status" type="char">
            <column name="STATUS" length="1" not-null="true" />
        </property>
	</class>
	
	<query name="updateHolidayForRegion">
		<![CDATA[
				UPDATE com.ff.domain.masters.HolidayDO holidayDO
					SET holidayDO.status='I'
					WHERE holidayDO.regionId =:regionId
		]]>
	</query>
	<query name="updateHolidayForState">
		<![CDATA[
				UPDATE com.ff.domain.masters.HolidayDO holidayDO
					SET holidayDO.status='I'
					WHERE holidayDO.regionId =:regionId and holidayDO.stateId =:stateId
		]]>
	</query>
	<query name="updateHolidayForCity">
		<![CDATA[
				UPDATE com.ff.domain.masters.HolidayDO holidayDO
					SET holidayDO.status='I'
					WHERE holidayDO.regionId =:regionId and holidayDO.stateId =:stateId and holidayDO.cityId =:cityId
		]]>
	</query>
</hibernate-mapping>
