<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ff.domain.stockmanagement.operations.requisition.SAPStockRequisitionDO" table="ff_f_sap_stock_requisition">
		<id name="Id" type="java.lang.Long">
			<column name="ID" />
			<generator class="native" />
		</id>
		<property name="requisitionNumber" column="REQUISITION_NUMBER" />
		<property name="officeCode" column="OFFICE_CODE" />
		<property name="rowNumber" column="ROW_NUMBER" />
		<property name="approvedQty" column="APPROVED_QUANTITY"/>
		<property name="description" column="DESCRIPTION"/>
		<property name="itemCode" column="ITEM_CODE" />
		<property name="itemTypeCode" column="ITEM_TYPE_CODE" />
		<property name="txCreatedDate" column="TRANS_CREATED_DATE_TIME" />
		<property name="procurementType" column="PROCUREMENT_TYPE" />
		<property name="prConsolidated" column="IS_PR_CONSOLIDATED" />
		<property name="seriesStartsWith" column="SERIES_STARTS_WITH" />
		<property name="uom" column="UOM" />
		<property name="stockRequisitionItemDtlsId" column="STOCK_REQ_ITEM_DTLS_ID" />
		<!--  common attributes  START-->
		<property name="sapStatus" column="DT_SAP_OUTBOUND" />
		<property name="sapTimestamp" column="SAP_TIMESTAMP" />
		<property name="exception" column="EXCEPTION" />
		<property name="createdBy" column="CREATED_BY" />
		<property name="updatedBy" column="UPDATE_BY" />
		<property name="createdDate" column="CREATED_DATE" />
		<property name="updatedDate" column="UPDATE_DATE" />
		<!--  common attributes  END-->
	</class>
	
<query name="getStockRequisitionDtlsFromSAPReq">
	<![CDATA[
		 FROM	com.ff.domain.stockmanagement.operations.requisition.SAPStockRequisitionDO sapStkReqDO
		 WHERE	sapStkReqDO.sapStatus=:sapStatus and ( sapStkReqDO.exception IS NULL or LENGTH(sapStkReqDO.exception ) < 1)
	]]>
</query>

<query name="updateStockRequisitionDtlsSAPFlag">
	<![CDATA[ 
		UPDATE	com.ff.domain.stockmanagement.operations.requisition.SAPStockRequisitionDO sapStkReqDO
		SET		sapStkReqDO.sapStatus=:sapStatus,sapStkReqDO.sapTimestamp=:sapTimestamp,sapStkReqDO.exception=:exception
		WHERE 	sapStkReqDO.Id=:Id
	]]>
</query> 
	
</hibernate-mapping>