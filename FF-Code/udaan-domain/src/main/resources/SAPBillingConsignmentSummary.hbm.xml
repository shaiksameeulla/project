	 	<property name="sapTimestamp" column="SAP_TIMESTAMP"/>
	 	<property name="createdBy" column="CREATED_BY" />
		<property name="updatedBy" column="UPDATE_BY" />
		<property name="createdDate" column="CREATED_DATE" />
		<property name="updatedDate" column="UPDATE_DATE" />
		<property name="exception" column="EXCEPTION" />
	</class>
	
<query name="getBCSFromStaging">
	<![CDATA[
		 FROM	com.ff.domain.billing.SAPBillingConsignmentSummaryDO sapBCSDO
		 WHERE	sapBCSDO.sapStatus=:sapStatus and ( sapBCSDO.exception IS NULL or LENGTH(sapBCSDO.exception ) < 1)
	]]>
</query>

<query name="getBCSCountFromStaging">
	<![CDATA[
	     SELECT COUNT(*)
		 FROM	com.ff.domain.billing.SAPBillingConsignmentSummaryDO sapBCSDO
		 WHERE	sapBCSDO.sapStatus=:sapStatus and ( sapBCSDO.exception IS NULL or LENGTH(sapBCSDO.exception ) < 1)
	]]>
</query>

<query name="updateBCSInStaging">
	<![CDATA[ 
		UPDATE	com.ff.domain.billing.SAPBillingConsignmentSummaryDO sapBCSDO
		SET		sapBCSDO.sapStatus=:sapStatus,sapBCSDO.sapTimestamp=:sapTimestamp,sapBCSDO.exception=:exception
		WHERE 	sapBCSDO.Id=:Id
	]]>
</query>
	
</hibernate-mapping>