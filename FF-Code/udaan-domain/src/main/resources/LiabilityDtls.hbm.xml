	 	FROM	com.ff.domain.mec.LiabilityDetailsDO liabilityEntries
	 	WHERE	liabilityEntries.sapStatus=:sapStatus
	]]>
</query> -->

 <query name="getTotalPaidLiabilityByConsg">
	<![CDATA[
	 	select sum(liabilityEntries.paidAmt) FROM	com.ff.domain.mec.LiabilityDetailsDO liabilityEntries
	 	WHERE	liabilityEntries.consgId.consgId=:consgId
	]]>
</query> 

</hibernate-mapping>