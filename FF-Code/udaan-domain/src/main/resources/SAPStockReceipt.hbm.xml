<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ff.domain.stockmanagement.operations.receipt.SAPStockReceiptDO" table="ff_f_sap_stock_receipt">
		<id name="Id" type="java.lang.Long">
			<column name="ID" />
			<generator class="native" />
		</id>
		<property name="rowNumber" column="ROW_NUMBER" />
		<property name="receivedDate" column="RECEIVED_DATE" />
		<property name="requisitionNumber" column="REQUISITION_NUMBER" />
		<property name="itemCode" column="ITEM_CODE" />
		<property name="itemTypeCode" column="ITEM_TYPE_CODE" />
		<property name="description" column="DESCRIPTION"/>
		<property name="uom" column="UOM" />
		<property name="receivedQty" column="RECEIVED_QUANTITY"/>
		<property name="ackNumber" column="ACKNOWLEDGEMENT_NUMBER"/>
		<property name="issueNumber" column="ISSUE_NUMBER" />
		<property name="exception" column="EXCEPTION" />
		<!--  common attributes  START-->
		<property name="sapStatus" column="DT_SAP_OUTBOUND" />
		<property name="sapTimestamp" column="SAP_TIMESTAMP" />
		<!-- <property name="createdBy" column="CREATED_BY" />
		<property name="updatedBy" column="UPDATE_BY" />
		<property name="createdDate" column="CREATED_DATE" />
		<property name="updatedDate" column="UPDATE_DATE" /> -->
		<!--  common attributes  END-->
	</class>
	
<query name="getStockReceiptDtlsFromSAPRecipt">
	<![CDATA[
		 FROM	com.ff.domain.stockmanagement.operations.receipt.SAPStockReceiptDO sapStkRecDO
		 WHERE	sapStkRecDO.sapStatus=:sapStatus and ( sapStkRecDO.exception IS NULL or LENGTH(sapStkRecDO.exception ) < 1)
	]]>
</query>

<query name="updateStockReceiptDtlsSAPFlag">
	<![CDATA[ 
		UPDATE	com.ff.domain.stockmanagement.operations.receipt.SAPStockReceiptDO sapStkRecDO
		SET		sapStkRecDO.sapStatus=:sapStatus,sapStkRecDO.sapTimestamp=:sapTimestamp,sapStkRecDO.exception=:exception
		WHERE 	sapStkRecDO.Id=:Id
	]]>
</query>
	
</hibernate-mapping>