<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.ff.domain.ratemanagement.masters.CodChargeDO" table="ff_d_cod_charge">
		<id name="codChargeId" type="java.lang.Integer" column="COD_CHARGE_ID">
			<generator class="native" />
		</id>
		
		<many-to-one name="rateComponent" class="com.ff.domain.ratemanagement.masters.RateComponentDO"  lazy="false"  fetch="join">
		<column name="RATE_COMPONENT" />
		</many-to-one>
		
		<property name="minimumDeclaredValue" column="MIN_DECLARED_VALUE"/>
		<property name="maximumDeclaredValue" column="MAX_DECLARED_VALUE"/>
		<property name="percentileValue" column="PERCENTILE_VALUE"/>
		<property name="fixedValue" column="FIXED_VALUE"/>
		<property name="dtToBranch" column="DT_TO_BRANCH"/>
		<property name="configuredFor" column="CONFIGURED_FOR"/>
		<property name="minimumDeclaredValLabel" column="MIN_DECLARED_VALUE_LABEL"/>
		<property name="maximumDeclaredValLabel" column="MAX_DECLARED_VALUE_LABEL"/>
		
		<many-to-one name="rateCustomerCategory" class="com.ff.domain.ratemanagement.masters.RateCustomerCategoryDO"  lazy="false" fetch="join" >
		<column name="RATE_CUSTOMER_CATEGORY" />
		</many-to-one>
		
	</class>
	
	<query name="getCodChargesByConfiguredForAndRateCustomerCategory">
		<![CDATA[ 
			FROM 	com.ff.domain.ratemanagement.masters.CodChargeDO Cod
			WHERE 	Cod.configuredFor=:configuredFor
			AND 	Cod.rateCustomerCategory.rateCustomerCategoryId=:rateCustomerCategoryId
		]]>
	</query>
</hibernate-mapping>