<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ff.domain.ratemanagement.operations.ba.BaRateCalculationCODChargesDO" table="ff_f_rate_ba_cod_charge">
		<id name="baCodChargesId">
			<column name="RATE_BA_COD_CHARGE_ID" />
			<generator class="native" />
		</id>
		<property name="considerFixed">
            <column name="CONSIDER_FIXED" />
        </property>
        <property name="considerHigherFixedOrPercent">
            <column name="CONSIDER_HIGHER_FIXED_OR_PERC" />
        </property>
		<property name="percentileValue">
            <column name="PERCENTILE_VALUE" />
        </property>
        <property name="fixedChargeValue">
            <column name="FIXED_VALUE" />
        </property>
        
        <property name="baRateHeader">
			<column name="BA_RATE_HEADER" />
		</property>
       
        <property name="priorityInd">
			<column name="PRIORITY_IND" />
		</property>
        
        <many-to-one name="codCharge" class="com.ff.domain.ratemanagement.masters.CodChargeDO"  lazy="false" >
		<column name="COD_CHARGE" />
		</many-to-one>
	</class>
	
	<query name="getCalculatedBACODCharge">
		<![CDATA[
				SELECT baCODChargesDO
				FROM com.ff.domain.ratemanagement.operations.ba.BaRateCalculationCODChargesDO baCODChargesDO
				INNER JOIN baCODChargesDO.codCharge codChargeDO
			    WHERE baCODChargesDO.baRateHeader=:baRateHeaderId
			    AND  baCODChargesDO.priorityInd =:priorityInd
			    AND (:codChargeSlab BETWEEN codChargeDO.minimumDeclaredValue
									AND codChargeDO.maximumDeclaredValue)
		]]>
	</query>
</hibernate-mapping>
	