<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ff.domain.billing.ReBillingHeaderDO" table="ff_f_re_billing_header">
         <id name="reBillingId" column="RE_BILLING_ID" type="java.lang.Integer" >
			<generator class="native" />
		</id>		
		
		<property name="reBillingNumber" type="java.lang.String">
			<column name="RE_BILLING_NUMBER" />
		</property>
		<property name="region" type="java.lang.Integer">
			<column name="REGION" />
		</property>
		<property name="city" type="java.lang.Integer">
			<column name="CITY" />
		</property>
		<property name="office" type="java.lang.Integer">
			<column name="OFFICE" />
		</property>
		
		<property name="customer" type="java.lang.Integer">
			<column name="CUSTOMER" />
		</property>
		
		<property name="startDate" type="java.util.Date">
			<column name="START_DATE" />
		</property>
		
		 <property name="endDate" type="java.util.Date">
			<column name="END_DATE" />
		</property>
		
		<property name="calculated">
			<column name="CALCULATED" />
		</property>
		
		<property name="createdBy" column="CREATED_BY" type="java.lang.Integer" />

		<property name="createdDate" column="CREATED_DATE" type="java.util.Date" />

		<property name="updatedBy" column="UPDATED_BY" type="java.lang.Integer" />

		<property name="updatedDate" column="UPDATED_DATE" type="java.util.Date" />
	</class>
	
	<query name="getRebillingDetails">
		<![CDATA[ 	FROM com.ff.domain.billing.ReBillingHeaderDO rebill
					where rebill.customer=:customerId
					AND rebill.office=:branchId
					AND rebill.createdDate BETWEEN :startDate and :endDate
				]]>
	</query>
	
	<query name="getRebillJobDetails">
		<![CDATA[ 	FROM com.ff.domain.billing.ReBillingHeaderDO rebill
					where rebill.calculated='N'
					
				]]>
	</query>
	
	<query name="updateRebillingHeader">
		<![CDATA[ 
		 
			UPDATE com.ff.domain.billing.ReBillingHeaderDO rebillHeader 
			SET rebillHeader.calculated='Y'    
			WHERE rebillHeader.reBillingNumber=:rebillHeaderNo
		]]>
	</query>
	
</hibernate-mapping>