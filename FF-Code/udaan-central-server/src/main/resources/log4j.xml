<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration>
	<appender name="appender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${catalina.base}/logs/udaan-central.log"/>
		<!-- <param name="MaxFileSize" value="10MB" />
		<param name="MaxBackupIndex" value="10" /> -->
		<param name="DatePattern" value="'.'yyyy-MM-dd-HH" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>

	<appender name="c3p0fileappender" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/udaan-central-c3p0.log" />

		<param name="MaxFileSize" value="10MB" />
		<param name="MaxBackupIndex" value="10" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>

	<appender name="bcunInboundAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${catalina.base}/logs/udaan-central-bcun-inbound.log" />
		<!-- <param name="MaxFileSize" value="10MB" />
		<param name="MaxBackupIndex" value="10" /> -->
		<param name="DatePattern" value="'.'yyyy-MM-dd-HH" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>


	<appender name="bcunOutboundAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${catalina.base}/logs/udaan-central-bcun-outbound.log" />
		<!-- <param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="10" /> -->
		<param name="DatePattern" value="'.'yyyy-MM-dd-HH" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>


	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>
	<appender name="c3p0App" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>
		
	<appender name="bcunFileProcessorAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${catalina.base}/logs/udaan-central-bcun-file-cleaner.log" />
		<param name="MaxFileSize" value="1024KB" />
		<param name="MaxBackupIndex" value="5" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>
	
	<category name="com.cg.lbs.bcun.service.common" additivity="false">
    	<priority value="debug"/>
    	<appender-ref ref="bcunFileProcessorAppender"/>
  	</category>

	<category name="com.mchange" additivity="false">
		<priority value="ERROR" />
		<appender-ref ref="c3p0fileappender" />
	</category>
	
	<category name="com.cg.lbs.bcun.service.inbound" additivity="false">
    	<priority value="debug"/>
    	<appender-ref ref="bcunInboundAppender"/>
  	</category>
	
	<category name="com.cg.lbs.bcun" additivity="false">
    	<priority value="debug"/>
    	<appender-ref ref="bcunOutboundAppender"/>
  	</category>
  	
  	
  	
  	
	
	<!-- <category name="com.dtdc.ng.bs.scheduler"
		additivity="false">
		<priority value="debug" />
		<appender-ref ref="BranchToCentralDBSync" />
	</category>
 -->

	<root>
		<priority value="debug" />
		<appender-ref ref="appender" />
		<appender-ref ref="bcunFileProcessorAppender" />
		
		<!--
		<appender-ref ref="console"/>		
 		<appender-ref ref="c3p0fileappender"/>
		<appender-ref ref="bcunInboundAppender"/>
		<appender-ref ref="bcunOutboundAppender"/> -->
	</root>
</log4j:configuration>
