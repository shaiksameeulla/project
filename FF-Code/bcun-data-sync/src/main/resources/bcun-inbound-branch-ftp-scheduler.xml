<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd 
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

	<!-- ####################################BCUN Data Sync FTP Scheduler############################################ -->


	<bean id="inboundBranchFtpScheduler" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass"
			value="com.cg.lbs.bcun.scheduler.inbound.InboundBranchFTPScheduler" />
		<property name="jobDataAsMap">
			<map>
				<entry key="inboundFileProcessor" value-ref="inboundFileProcessor" />
			</map>
		</property>
	</bean>
	<bean id="inboundBranchFtpSimpleTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<!-- see the example of method invoking job above -->
		<property name="jobDetail" ref="inboundBranchFtpScheduler" />
		<!-- 30 seconds 0 */3 00-18,21-23 * * ?" -->
		<property name="cronExpression" value="0 0/3 * * * ?" />
	</bean>
	<bean id="inboundBranchFtpSimpleTriggerFact"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="schedulerName" value="inboundBranchFtpSimpleTriggerSCH" />
		<property name="quartzProperties">
			<props>
				<!-- ThreadPool -->
				<prop key="org.quartz.threadPool.class">org.quartz.simpl.SimpleThreadPool</prop>
				<prop key="org.quartz.threadPool.threadCount">1</prop>
				<prop key="org.quartz.threadPool.threadPriority">5</prop>
			</props>
		</property>
		<property name="triggers">
			<list>
				<ref bean="inboundBranchFtpSimpleTrigger" />
			</list>
		</property>
	</bean>
	
	<bean id="inboundBranchFtpTriggerB" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<!-- see the example of method invoking job above -->
		<property name="jobDetail" ref="inboundBranchFtpScheduler" />
		<!-- 30 seconds 0 */3 00-18,21-23 * * ?" -->
		<property name="cronExpression" value="0 3 */2 * * ?" />
	</bean>
	<bean id="inboundBranchFtpTriggerFactB"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="schedulerName" value="inboundBranchFtpTriggerSchedulerB" />
		<property name="quartzProperties">
			<props>
				<!-- ThreadPool -->
				<prop key="org.quartz.threadPool.class">org.quartz.simpl.SimpleThreadPool</prop>
				<prop key="org.quartz.threadPool.threadCount">1</prop>
				<prop key="org.quartz.threadPool.threadPriority">5</prop>
			</props>
		</property>
		<property name="triggers">
			<list>
				<ref bean="inboundBranchFtpTriggerB" />
			</list>
		</property>
	</bean>
	<!-- ####################################BCUN Data Sync FTP Scheduler############################################ -->
	
	<bean id="inboundBranchSetupHelper" class="com.cg.lbs.bcun.utility.InboundBranchIntializerHelper">
		<property name="bcunProperties" ref="bcunProperties" />
	</bean>
	<bean id="inboundBranchSetup" class="com.cg.lbs.bcun.utility.InboundBranchIntializer">
		<property name="inboundBranchIntializerHelper" ref="inboundBranchSetupHelper" />
	</bean>
	
	 <bean name="branchSetupFatoryBean" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
    <property name="targetObject" ref="inboundBranchSetup" />
        <property name="targetMethod" value="inboundBranchSetUp" />
    </bean>
    
    
    <bean id="branchSetupTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="branchSetupFatoryBean" />
          <!-- run every afternoon at 12 pm   -->
        <property name="cronExpression" value="0 0 10 L * ?" />
    </bean>
    
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="branchSetupTrigger" />
			</list>
		</property>
	</bean>
</beans>